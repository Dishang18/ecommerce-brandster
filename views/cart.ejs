<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
</head>
<body>
    <%- include('./partials/header') %>
    <a href="/bill" class="absolute top-5 right-5 bg-green-500 text-white mt-5 px-4 py-2 rounded-lg shadow-md hover:bg-green-600">
        Buy Now
    </a>
    <div class="flex flex-wrap gap-12 px-20 py-20">
        <% user.cart.forEach(function(item){ %>
            <div class="w-full md:w-[30%] lg:w-[20%] rounded-md overflow-hidden flex flex-col items-start">
                <div class="w-full flex justify-center items-center h-48 bg-[<%= item.bgcolor %>]">
                    <img class="h-32" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
                </div>
                <div class="w-full flex flex-col justify-between px-3 py-2 bg-[<%= item.panelcolor %>]">
                    <h3 class="text-lg">Clinge Bag</h3>
                    <div class="flex items-center gap-2 mt-2">
                        <i class="w-5 h-5 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-1 py-0.5 rounded-md bg-white text-black">01</div>
                        <i class="w-5 h-5 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                <div class="w-full mt-5 px-3">
                    <div class="flex items-center justify-between px-5 py-3 bg-[<%=item.textcolor %>] rounded-md text-white">
                        <h4 class="text-lg font-semibold mr-4">Net Total</h4>
                        <h2 class="text-lg font-semibold">₹ <%= bill %></h2>
                    </div>
                </div>
                <div class="w-full mt-5 px-3">
                    <h3 class="text-lg">Price Breakdown</h3>
                    <div class="mt-3">
                        <div class="flex mt-1">
                            <h4 class="w-1/2 text-sm">Total MRP</h4>
                            <h4 class="text-sm">₹ <%= item.price %></h4>
                        </div>
                        <div class="flex mt-1">
                            <h4 class="w-1/2 text-sm">Discount on MRP</h4>
                            <h4 class="text-sm">₹ <%= Number(item.discount) %></h4>
                        </div>
                        <div class="flex mt-1">
                            <h4 class="w-1/2 text-sm">Platform Fee</h4>
                            <h4 class="text-sm">₹ 20</h4>
                        </div>
                        <div class="flex mt-1">
                            <h4 class="w-1/2 text-sm">Shipping Fee</h4>
                            <h4 class="text-sm">FREE</h4>
                        </div>
                    </div>
                    <div class="w-full h-[1px] bg-black mt-5"></div>
                    <div class="flex mt-3">
                        <h3 class="w-1/2 text-lg">Total Amount</h3>
                        <h3 class="font-semibold text-lg text-green-600">₹ <%= bill %></h3>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <%- include('./partials/footer') %>
</body>
</html>
